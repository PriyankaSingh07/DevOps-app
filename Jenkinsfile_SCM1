pipeline {
 agent any
 
 options {
  skipDefaultCheckout()
 }
 stages {
  stage('SCM') {
   steps {
   echo 'Checkout'
    checkout scm
   }
  }
 }
     stage('CheckStyle') {
     agent {
      docker {
       image 'maven:3.6.0-jdk-8-alpine'
       args '-v /root/.m2/repository:/root/.m2/repository'
       reuseNode true
      }
     }
     steps {
      sh ' mvn checkstyle:checkstyle'
      step([$class: 'CheckStylePublisher',
       defaultEncoding: '',
       healthy: '100',
       pattern: '**/target/checkstyle-result.xml',
       unHealthy: '90',
      ])
     }
    }
}
